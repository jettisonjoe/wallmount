#!/usr/bin/env python


""" wallmount

wallmount is a command line tool to deploy p5js sketches in conjunction with a
companion wallmount server, wallmountd. It controls the server via RPC.
"""

# SERVER_URL = 'http://192.168.1.39:8000/wallmount'
SERVER_URL = 'http://localhost:8000/wallmount'


import socket
import sys
import xmlrpclib


def print_usage_and_exit():
	print '\n' \
	      'wallmount [sketch_name]\n' \
	      '\n' \
	      'sketch_name: Filename of a p5js script in the configured repo.\n'
	sys.exit()


def request_deploy(sketch_name):
	print 'Requesting deployment of \'%s\'.' % sketch_name
	server = xmlrpclib.Server(SERVER_URL)
	try:
		response = server.deploy_sketch(sketch_name)
	except socket.error as e:
		print 'Unable to connect to wallmount server at \'%s\':\n' \
		      '%s' % (SERVER_URL, e)
		sys.exit()
	if response is not None:
		print 'Connected to wallmount server, but unable to deploy:\n' \
		      '%s' % response
		sys.exit()
	print "Deployment appeared successful!"


def main(argv):
	if len(argv) is not 2:
		print_usage_and_exit()
	request_deploy(argv[1])


if __name__ == '__main__':
	main(sys.argv)
